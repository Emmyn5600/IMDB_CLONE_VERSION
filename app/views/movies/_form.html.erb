<%= simple_form_for @movie do |f|%>
<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category",  class: "form-select form-select-lg mb-3")%>
<%= f.input :title, placeholder: "Movie Title"%>
<%= f.input :description, placeholder: "Movie Description" %>
<%= f.file_field :movie_image %>
<div class="mt-3">
    <%= f.button :submit, class: "btn btn-outline-success " %>
    <%= link_to 'Back', root_path, class: "btn btn-outline-primary"%>
</div>
<%end%>
