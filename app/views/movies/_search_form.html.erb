<div class="card rounded-0">
    <div class="card-body">
        <%= search_form_for @q do |form| %>
            <div class="form-group row">
                <div class="col-lg-3">
                    <%= form.label :title %>
                    <%= form.search_field :title_cont, class: "form-control" %>
                </div>
            </div>
            <div class="form-group">
                <%= form.submit class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
