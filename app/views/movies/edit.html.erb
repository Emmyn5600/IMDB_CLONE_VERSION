<h1>Edit Movie</h1>

<%= simple_form_for @movie, :html => { :multipart => true} do |f|%>
<%= f.select :category_id, @categories%>
<%= f.input :title, label: "Movie Tite"%>
<%= f.input :description%>
<%= f.file_field :movie_image%>
<%= f.button :submit, class: "btn btn-outline-success mt-2" %>
<%end%>
