<h3 class="text-center fs-4 badge bg-success" , style="width: 20rem;">Admin Edit Movie Form</h3>
<div class="col-lg-12">
    <div class="card shadow mb-3 mt-2">
        <div class="card-body">
            <h4>Edit Movie</h4>

            <%= simple_form_for @movie, :html => { :multipart => true} do |f|%>
            <%= f.select :category_id, @categories %>
            <%= f.input :title, label: "Movie Tite"%>
            <%= f.input :description, class: "mt-4"%>
            <%= f.file_field :movie_image, class: "mt-3"%>
            <div class="mt-3">
                <%= f.button :submit, class: "btn btn-outline-success" %>
                <%= link_to 'Back', root_path, class: "btn btn-outline-primary"%>
            </div>
            <%end%>
        </div>
    </div>
</div></div>
